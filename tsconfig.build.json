{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "build"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__/**/*.ts"]
}
